@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers       
@{
    ViewBag.Title = "Product";
}
@helper DisplayPriceRazor(double price)
{
    if (price == 0.0)
    {
        <span>Free!!!</span>
    }
    else
    {
        <span>@price</span>
    }
}
@helper DisplayDateOrNull(DateTime? createDate)
{
if (createDate == null)
{
        <span>None</span>
}
else
{
        <span>@createDate</span>
}
}
<h2>Products</h2>

<ul>
    @foreach (var product in Model)
    {
        <li>
            <span>@product.Description</span>
            @DisplayPriceRazor(product.Price)

            @*<div>
            @CustomHelper.DisplayPriceStatic(product.Price)
        </div>
        <div>
            @Html.DisplayPriceExtension(product.Price)
        </div>*@
            <span>Razor: @DisplayDateOrNull(product.CreateDate) </span>
            <span>Static: @Html.DisplayDateOrNullExtension(product.CreateDate)</span>
            <span>Extension: @CustomHelper.DisplayDateOrNullStatic(product.CreateDate)</span>

</li>
    }
</ul>
