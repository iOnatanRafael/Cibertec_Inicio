@using Microsoft.AspNet.Identity

@if(Request.IsAuthenticated)
{
    //Cuando ya esté logueado
    using (Html.BeginForm("LogOff",
        "Account",
        FormMethod.Post,
        new { id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken() //Evita que la página sea llamada desde otro html
        <ul class="nav nav-bar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName(),
                                "Manage",
                                "Account",
                                routeValues: null,
                                htmlAttributes: new { title = "Manage" }
                                )
            </li>
        </ul>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </li>
    }
}
else
{
    //Cuando no esté logueado
      <ul class="nav nav-bar-nav navbar-right">
          <li>
              @Html.ActionLink("Register","Register","Account")
          </li>
          <li>
              @Html.ActionLink("Log In", "Login", "Account")
          </li>
      </ul>
}
